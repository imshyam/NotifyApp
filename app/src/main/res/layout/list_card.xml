<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/card_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/topPanel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:padding="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show HN: Arrow Hero"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textColor="@color/darkHeading"/>
                <TextView
                    android:id="@+id/link"
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Link)"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="@color/mediumHeading"/>

                <RelativeLayout
                    android:id="@+id/middlePanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topPanel">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_clock"/>
                        <TextView
                            android:id="@+id/time"
                            android:padding="5sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#bbb"
                            android:textSize="@dimen/abc_text_size_small_material"
                            android:text="4 hours ago"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <TextView
                            android:padding="5sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#bbb"
                            android:textSize="@dimen/abc_text_size_small_material"
                            android:text="by :"/>
                        <TextView
                            android:id="@+id/username"
                            android:padding="5sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#ff176388"
                            android:textSize="@dimen/abc_text_size_small_material"
                            android:text="username"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/bottonPanel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_below="@id/middlePanel">
                    <View
                        android:id="@+id/vertical_divider"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_width"
                        android:background="#ddd"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout">
                        <RelativeLayout
                            android:layout_marginRight="5sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/circular_background"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:gravity="center">
                            <ImageView
                                android:padding="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_upvotes"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34"
                            android:id="@+id/noOfUpvotes"
                            android:layout_marginRight="5sp"/>
                        <LinearLayout
                            android:layout_width="@dimen/divider_width"
                            android:background="@color/lightGrey"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:layout_height="match_parent"></LinearLayout>
                        <TextView
                            android:gravity="center"
                            android:padding="5sp"
                            android:id="@+id/articleLink"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Story"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/abc_text_size_small_material"
                            android:textColor="@color/link_text_material_light" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/notifyClick"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:id="@+id/notifyOrNotBackground"
                                android:layout_marginRight="15sp"
                                android:layout_marginLeft="5sp"
                                android:background="@drawable/circular_background"
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/notifyOrNotImage"
                                    android:padding="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_notification"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginRight="5sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/circular_background"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:gravity="center">
                            <ImageView
                                android:padding="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_comments"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34"
                            android:id="@+id/noOfComments"
                            android:layout_marginRight="5sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
